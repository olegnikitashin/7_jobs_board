!!! 5
%html
  %head
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %title Jobs Board

  %body
    %nav.navbar.navbar-default
      .container
        .navbar-brand Rails Jobs
        %ul.nav.navbar-nav.navbar-left
          %li= link_to 'All Jobs', root_path
          - Category.all.each do |category|
            %li= link_to category.name, jobs_path(category: category.name)
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li= link_to 'New Job', new_job_path, class: "navbar-text navbar-right navbar-link"
            %li= link_to 'Profile', edit_user_registration_path, class: "navbar-text navbar-right navbar-link"
            %li= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "navbar-text navbar-right navbar-link"
          - else
            %li= link_to 'Sign Up', new_user_registration_path, class: "navbar-text navbar-right navbar-link"
            %li= link_to 'Sign In', new_user_session_path, class: "navbar-text navbar-right navbar-link"

    .container
      - flash.each do |name, msg|
        = content_tag :div, msg, class: "alert alert-info"
    .container
      .col-md-6.col-md-offset-3
        = yield
